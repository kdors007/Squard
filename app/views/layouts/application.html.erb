<!DOCTYPE html>
<html>
  <head>
    <title>Squard</title>
    
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <h1 align="center">Welcome to Squard!</h1>
    <div align="center">
    <% if current_user %>
      Signed in as <%= current_user.username %> | <%= link_to "Logout", '/logout' %>
	  <% else %>
      <%= link_to 'Login', '/login' %> | <%= link_to 'Signup', '/signup' %>
	  <% end %>
    </div>
    <br><br>
    <%= yield %>
  </body>
</html>
